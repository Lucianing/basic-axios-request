{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      "es5",
      "es6", 
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "lib",
    "baseUrl": ".",
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
